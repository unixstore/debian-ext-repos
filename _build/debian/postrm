#!/usr/bin/bash -e

# -------------------------------------------------------------------------------------------------------------------- #
# CONFIGURATION.
# -------------------------------------------------------------------------------------------------------------------- #

sources="/etc/apt/sources.list.d"
trusted="/etc/apt/trusted.gpg.d"

# -------------------------------------------------------------------------------------------------------------------- #
# INITIALIZATION.
# -------------------------------------------------------------------------------------------------------------------- #

init() {
  remove_sources && remove_trusted
}

# -------------------------------------------------------------------------------------------------------------------- #
# REMOVE SOURCES.
# -------------------------------------------------------------------------------------------------------------------- #

remove_sources() {
  rm -f ${sources}/ext.*
}

# -------------------------------------------------------------------------------------------------------------------- #
# REMOVE TRUSTED.
# -------------------------------------------------------------------------------------------------------------------- #

remove_trusted() {
  rm -f ${trusted}/ext.*
}

# -------------------------------------------------------------------------------------------------------------------- #
# -------------------------------------------------< INIT FUNCTIONS >------------------------------------------------- #
# -------------------------------------------------------------------------------------------------------------------- #

init "$@"; exit 0
